  year = {2021},
  journal = {Hydrogeology Journal},
  title = {{Exploring the hydrological effects of normal faults at the boundary of the Roer Valley Graben in Belgium using a catchment-scale groundwater flow model}},
  author = {Casillas-Trasvina, Alberto and Rogiers, Bart and Beerten, Koen and Wouters, Laurent and Walraevens, Kristine},
  month = {nov},
