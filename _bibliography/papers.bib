  title = {{A new externally coupled, physically-based multi-model framework for simulating subsurface and overland flow hydrological processes on hillslopes}},
  author = {Rahman, ATM and Simunek, Jiri and Bradford, Scott and Ajami, Hoori and Meles, Menberu B. and Chen, Lin and Szymkiewicz, Adam and Pawlowicz, Mateusz and Acero Triana, Juan S. and Casillas-Trasvina, Alberto and Beegum, Sahila},
